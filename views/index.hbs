<div class="container d-flex flex-column" style="background-color: white;">

  <div class="create-button d-flex justify-content-center mt-5 mb-5">
    <div class="wrapper d-flex justify-content-center" style="width: 15%;">
      <a href="/records/new" class="btn w-100"
        style="background-color: #E4885B; color: white; font-weight: bold;">新增支出</a>
    </div>
  </div>

  <div class="category-filter d-flex justify-content-center" style="width: 35%;margin: 1rem auto;">
    <form class="w-100" action="/search" method="GET">
      <div class="dropdown w-100">
        <select name="category-select" id="category-select" class="w-100" onchange="submit()">
          <option value="--">類別</option>
          <option value="house">家居物業</option>
          <option value="vehicle">交通出行</option>
          <option value="entertainment">休閒娛樂</option>
          <option value="food">餐飲食品</option>
          <option value="other">其他</option>
        </select>
      </div>
    </form>
  </div>

  <div class="total-amount d-flex justify-content-center" style="width: 35%; margin: 1rem auto;">
    <div class="wrapper d-flex w-100">
      <div class="total-amount-title text-center" style="flex-basis: 40%;">
        <span style="font-size: 1.7rem; font-weight: bold;">
          總金額：
        </span>
      </div>

      <div class="total-amount-number" style="flex-basis: 60%;">
        <span style="font-size: 5rem; font-weight: bold; color: #E4885B; margin-left: 1rem;">
          1000
        </span>
      </div>
    </div>
  </div>

  <div class="expense-list" style="width: 35%; height: 60vh; overflow: auto; margin: 1rem auto 1.6rem auto;">
    <table class="table table-striped align-middle w-100" style="box-shadow: 0 0 4px 0.1px rgba(0, 0, 0, 0.3);">
      <tbody>

        <tr>
          <td>
            <div class="info-wrapper d-flex align-items-center">
              <div class="info-icon text-center me-1" style="width: 11%;">
                <i class="fa-solid fa-house text-info" style="font-size: 2.1rem;"></i>
              </div>

              <div class="info-title" style="width: 38%;">
                <div class="info-name" style="font-size: 1.4rem;">
                  <span>午餐</span>
                </div>
                <div class="info-date" style="font-size: 0.8rem;">
                  <span>2023/01/22</span>
                </div>
              </div>

              <div class="amount me-2" style="width: 20%; font-size: 1.1rem;">
                <span>
                  花費： 100000
                </span>
              </div>

              <div class="button-wrapper" style="width: 24%;">
                <a href="/records/:id/edit" class="btn btn-success"><i class="fa-solid fa-pen-to-square"></i></a>
                <a href="" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal"><i
                    class="fa-solid fa-trash-can"></i></a>
              </div>
            </div>
          </td>
        </tr>

        <tr>
          <td>
            <div class="info-wrapper d-flex align-items-center">
              <div class="info-icon text-center me-1" style="width: 11%;">
                <i class="fa-solid fa-house text-info-emphasis" style="font-size: 2.1rem;"></i>
              </div>

              <div class="info-title" style="width: 38%;">
                <div class="info-name" style="font-size: 1.4rem;">
                  <span>午餐</span>
                </div>
                <div class="info-date" style="font-size: 0.8rem;">
                  <span>2023/01/22</span>
                </div>
              </div>

              <div class="amount me-2" style="width: 20%; font-size: 1.1rem;">
                <span>
                  花費： 100000
                </span>
              </div>

              <div class="button-wrapper" style="width: 24%;">
                <a href="/records/:id/edit" class="btn btn-success"><i class="fa-solid fa-pen-to-square"></i></a>
                <a href="" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal"><i
                    class="fa-solid fa-trash-can"></i></a>
              </div>
            </div>
          </td>
        </tr>

        <tr>
          <td>
            <div class="info-wrapper d-flex align-items-center">
              <div class="info-icon text-center me-1" style="width: 11%;">
                <i class="fa-solid fa-house" style="font-size: 2.1rem;"></i>
              </div>
        
              <div class="info-title" style="width: 38%;">
                <div class="info-name" style="font-size: 1.4rem;">
                  <span>午餐</span>
                </div>
                <div class="info-date" style="font-size: 0.8rem;">
                  <span>2023/01/22</span>
                </div>
              </div>
        
              <div class="amount me-2" style="width: 20%; font-size: 1.1rem;">
                <span>
                  花費： 100000
                </span>
              </div>
        
              <div class="button-wrapper" style="width: 24%;">
                <a href="/records/:id/edit" class="btn btn-success"><i class="fa-solid fa-pen-to-square"></i></a>
                <a href="" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal"><i
                    class="fa-solid fa-trash-can"></i></a>
              </div>
            </div>
          </td>
        </tr>

      </tbody>
    </table>
  </div>



  <!-- Modal -->
  <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">

        <div class="align-self-end mt-3 me-3">
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>

        <div class="modal-body text-center my-4">
          <h1>
            Delete this record ?
          </h1>
        </div>

        <div class="align-self-end mb-4 me-4">
          <form action="/restaurants/:id?_method=DELETE" action="POST" style="display: inline;">
            <button type="submit" class="btn btn-danger me-3">Yes</button>
          </form>
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
        </div>

      </div>
    </div>
  </div>

</div>